<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="mx.edu.utez.ejercicioexamen.controllers.RecuperarContraController"
            prefHeight="300.0" prefWidth="400.0">

    <VBox alignment="CENTER" spacing="15.0"
          AnchorPane.topAnchor="40.0"
          AnchorPane.leftAnchor="40.0"
          AnchorPane.rightAnchor="40.0">

        <Label text="Recuperar contraseña"
               style="-fx-font-size: 20px; -fx-font-weight: bold;" />

        <TextField fx:id="correoField"
                   promptText="Ingresa tu correo electrónico"
                   maxWidth="300" />

        <Button text="Solicitar cambio de contraseña"
                fx:id="solicitarButton"
                onAction="#handleSolicitarCambio"
                maxWidth="300" />

        <Label fx:id="errorLabel"
               textFill="red"
               visible="false" />

    </VBox>
</AnchorPane>